# NocoDB Configuration

# Puerto para acceder a NocoDB
NC_PORT=8080

# Base de datos (formato: tipo://host:puerto?u=usuario&p=password&d=database)
# Tipos soportados: pg (PostgreSQL), mysql, mariadb, sqlite3
NC_DB=pg://db:5432?u=nocodb&p=nocodb&d=nocodb

# Secret JWT para autenticación (cambiar en producción)
NC_AUTH_JWT_SECRET=your-secret-jwt-token-change-this

# Sentry DSN (opcional, para monitoreo de errores)
NC_SENTRY_DSN=

# PostgreSQL Configuration
POSTGRES_USER=nocodb
POSTGRES_PASSWORD=nocodb
POSTGRES_DB=nocodb

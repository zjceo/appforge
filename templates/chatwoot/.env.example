# Chatwoot Configuration

# Puerto del servidor Rails
RAILS_PORT=3000

# Base de datos PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_DATABASE=chatwoot
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres

# Rails
RAILS_ENV=production
SECRET_KEY_BASE=change-this-secret-key-base-generate-with-rails-secret

# URLs
FRONTEND_URL=http://localhost:3000

# Nombre de la instalaci√≥n
INSTALLATION_NAME=Chatwoot

# Email
MAILER_SENDER_EMAIL=noreply@example.com

# Redis (opcional, se usa el servicio de docker-compose)
REDIS_URL=redis://redis:6379

# Para generar SECRET_KEY_BASE, ejecuta:
# docker run --rm chatwoot/chatwoot:latest bundle exec rails secret
